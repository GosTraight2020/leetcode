class Solution {
public:
    int numWays(int n) {
        if(n==0)return 1;
        if(n==1)return 1;
        int p=1, q=1, res=2;
        for (int i=2; i<n; i++){
            p = q;
            q = res;
            res = (p + q) % 1000000007;
       }
       return res;
    }
};

#######################################
1. f(0)=1, f(1)=1
2. 循环条件i=2; i<n
3. p=1, q=1, res=2;
